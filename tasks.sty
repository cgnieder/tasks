      \dim_set:Nn \l__tasks_full_width_dim { \linewidth }
      \tasks_environment:Vnnn \l__tasks_instance_tl {#3} {#1} {#4}
    \endlist
    \dim_compare:nNnF { \l__tasks_after_list_skip } = {0pt}
      { \addvspace {\l__tasks_after_list_skip} }
  }

